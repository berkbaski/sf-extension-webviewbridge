{
  "compilerOptions": {
    "incremental": true,
    "target": "es2016",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": [
      "es2016",
      "DOM"
    ],
    "checkJs": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./",
    "rootDir": "src",
    "downlevelIteration": true,
    "strict": true,
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ],
}